<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nick.miros.BudgetControl.budgetcontrol.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nick.miros.BudgetControl.budgetcontrol.activities.AddExpenseActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="nick.miros.BudgetControl.budgetcontrol.activities.ExpenseListActivity" >
        </activity>
        <activity
            android:name="nick.miros.BudgetControl.budgetcontrol.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nick.miros.BudgetControl.budgetcontrol.activities.BudgetSettingsActivity"
            android:label="@string/title_activity_budget_settings" >
        </activity>
        <activity
            android:name="nick.miros.BudgetControl.budgetcontrol.activities.CurrencyListActivity"
            android:label="@string/title_activity_currency_list" >
        </activity>
    </application>

</manifest>
