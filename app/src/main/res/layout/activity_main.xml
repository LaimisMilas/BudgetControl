<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/balance"
        android:text="balls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp" />

    <TextView
        android:text="@string/daily_budget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp" />

    <nick.miros.BudgetControl.budgetcontrol.helper.MyProgressBar
        android:id="@+id/dailyProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:maxHeight="30dp"
        android:minHeight="30dp"/>

    <TextView
        android:text="@string/monthly_budget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp" />

    <nick.miros.BudgetControl.budgetcontrol.helper.MyProgressBar
        android:id="@+id/monthlyProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:maxHeight="30dp"
        android:minHeight="30dp"/>

    <Button
        android:id="@+id/ExpenseDirectionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Add Expense" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/DataDirectionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="history" />

        <Button
            android:id="@+id/BudgetDirectionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="budget" />
    </LinearLayout>

</LinearLayout>
