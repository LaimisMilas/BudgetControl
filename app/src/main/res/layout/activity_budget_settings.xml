<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="nick.miros.BudgetControl.budgetcontrol.activities.BudgetSettingsActivity">

    <TextView
        android:id="@+id/currentMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/hello_world" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currentMonthBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initial_budget_value" />

        <ImageButton
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/EditButton"
            android:layout_width="40dip"
            android:layout_height="28dip"
            android:scaleType="fitXY"
            android:src="@drawable/edit_icon"/>
    </LinearLayout>

    <TextView
        android:id="@+id/dailyBudgetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="daily budget" />

    <TextView
        android:id="@+id/dailyBudgetAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_daily_budget_value" />

    <TextView
        android:id="@+id/currencyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="local currency" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currentCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initial_budget_value" />

        <ImageButton
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/EditCurrencyButton"
            android:layout_width="40dip"
            android:layout_height="28dip"
            android:scaleType="fitXY"
            android:src="@drawable/edit_icon"/>
    </LinearLayout>

</LinearLayout>
